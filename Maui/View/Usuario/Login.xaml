<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.View.Usuario.Login">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">

                <!-- Cabeçalho -->
                <Frame BackgroundColor="{StaticResource Azul}"
                           Padding="20"
                           CornerRadius="15"
                           HasShadow="True">
                    <VerticalStackLayout Spacing="20">

                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Image Source="seguranca.png" WidthRequest="28" HeightRequest="28" />
                            <Label Text="Bem-vindo ao OrgaTask"
                                       FontAttributes="Bold"
                                       FontSize="24"
                                       TextColor="White"
                                       Margin="10,0,0,0" />
                        </HorizontalStackLayout>

                        <Label Text="Acesse sua conta para gerenciar suas tarefas e aumentar sua produtividade."
                                   FontSize="14"
                                   TextColor="White"
                                   HorizontalTextAlignment="Center" />

                        <!-- Benefícios -->
                        <VerticalStackLayout Spacing="12" HorizontalOptions="Center">
                            <HorizontalStackLayout>
                                <Image Source="aceitar.png" WidthRequest="20" HeightRequest="20" />
                                <Label Text="Controle suas tarefas de forma eficiente."
                                           TextColor="White"
                                           FontSize="12"
                                           Margin="8,0,0,0"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout>
                                <Image Source="aceitar.png" WidthRequest="20" HeightRequest="20" />
                                <Label Text="Organize por prioridades e prazos."
                                           TextColor="White"
                                           FontSize="12"
                                           Margin="8,0,0,0"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout>
                                <Image Source="aceitar.png" WidthRequest="20" HeightRequest="20" />
                                <Label Text="Acompanhe seu progresso diário."
                                           TextColor="White"
                                           FontSize="12"
                                           Margin="8,0,0,0"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>

                    </VerticalStackLayout>
                </Frame>

                <!-- Login -->
                <Frame Padding="20" CornerRadius="15" HasShadow="True">
                    <VerticalStackLayout Spacing="15">

                        <Label Text="Usuário:"/>
                        <Entry x:Name="txtUsuario" Placeholder="Digite seu usuário..." Text="{Binding UsuarioLogin.Login}"/>
                        <Label Text="O usuário é obrigatório!" TextColor="Red"  IsVisible="{Binding MostrarErroUsuario}"/>

                        <Label Text="Senha:"/>

                        <HorizontalStackLayout VerticalOptions="Center" Spacing="5">

                            <Entry x:Name="txtSenha"
                                   Placeholder="Digite sua senha..."
                                   IsPassword="{Binding IsSenhaOculta}"
                                   Text="{Binding UsuarioLogin.Senha}"
                                   WidthRequest="250"
                                   HorizontalOptions="FillAndExpand" />


                            <ImageButton Source="{Binding IconeOlhoSenha}"
                                         Command="{Binding ExibirSenhaCommand}"
                                         BackgroundColor="Transparent"
                                         WidthRequest="5"
                                         HeightRequest="5"
                                         Margin="0"
                                         HorizontalOptions="End"
                            />

                        </HorizontalStackLayout>

                        <Label Text="A senha é obrigatório!" TextColor="Red"  IsVisible="{Binding MostrarErroSenha}" />

                        <Button x:Name="btnEntrar"
                                    Text="Entrar"
                                    ImageSource="entrada.png"
                                    ContentLayout="Left, 10"
                                    BackgroundColor="#007AFF"
                                    TextColor="White"
                                    HeightRequest="45"
                                    CornerRadius="10" 
                                    Command="{Binding EntrarCommand}"/>

                        <Button x:Name="btnCriarConta" Text="Criar uma conta"
                                    ImageSource="adicionar_amigo.png"
                                    ContentLayout="Left, 10"
                                    BorderColor="Gray"
                                    BorderWidth="1.5"
                                    BackgroundColor="White"
                                    TextColor="Gray"
                                    CornerRadius="10"
                                    HeightRequest="45"
                                    Command="{Binding CriarContaCommand}"/>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- OVERLAY DE LOADING -->
        <Grid IsVisible="{Binding IsRefreshing}"
              BackgroundColor="#80000000"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand"
              InputTransparent="False">

            <ActivityIndicator IsRunning="True"
                               Color="White"
                               WidthRequest="60"
                               HeightRequest="60"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
        </Grid>

    </Grid>

</ContentPage>