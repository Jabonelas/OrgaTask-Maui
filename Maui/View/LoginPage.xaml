<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.View.LoginPage"
             Title="LoginPage">
    <!-- Layout PRINCIPAL (único filho direto da ContentPage) -->
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource Azul}"
               Padding="20"
               CornerRadius="15"
               HasShadow="True">

                <VerticalStackLayout Spacing="20">

                    <HorizontalStackLayout HorizontalOptions="Center">

                        <Image Source="seguranca.png"
                               WidthRequest="28"
                               HeightRequest="28" />

                        <Label Text="Bem-vindo ao OrgaTask"
                           FontAttributes="Bold"
                           FontSize="26"
                           TextColor="White"
                           Margin="10,0,0,0" />

                    </HorizontalStackLayout>

                    <Label Text="Acesse sua conta para gerenciar suas tarefas e aumentar sua produtividade."
                       FontSize="14"
                       TextColor="White"
                       HorizontalTextAlignment="Center" />

                    <!-- Benefícios -->
                    <VerticalStackLayout Spacing="12">

                        <HorizontalStackLayout >

                            <Image Source="aceitar.png"
                                   WidthRequest="20"
                                   HeightRequest="20" />

                            <Label Text="Controle suas tarefas de forma eficiente"
                               TextColor="White"
                               FontSize="13"
                               Margin="8,0,0,0"/>

                        </HorizontalStackLayout>

                        <HorizontalStackLayout>

                            <Image Source="aceitar.png"
                                   WidthRequest="20"
                                   HeightRequest="20" />

                            <Label Text="Organize por prioridades e prazos"
                               TextColor="White"
                               FontSize="13"
                               Margin="8,0,0,0"/>

                        </HorizontalStackLayout>

                        <HorizontalStackLayout >

                            <Image Source="aceitar.png"
                                   WidthRequest="20"
                                   HeightRequest="20" />
                            <Label Text="Acompanhe seu progresso diário"
                               TextColor="White"
                               FontSize="13"
                               Margin="8,0,0,0"/>

                        </HorizontalStackLayout>

                    </VerticalStackLayout>

                </VerticalStackLayout>

            </Frame>

            <!-- Login -->
            <Frame Padding="20" CornerRadius="15" HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <Label Text="Usuário" FontAttributes="Bold"/>

                    <Entry Placeholder="Digite seu usuário"/>

                    <Label Text="Senha" FontAttributes="Bold"/>

                    <Entry Placeholder="Digite sua senha" IsPassword="True"/>

                    <Button Text="Entrar"
                        ImageSource="entrada.png"
                        ContentLayout="Left, 10"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        HeightRequest="45"
                        CornerRadius="10"/>

                    <Button Text="Criar uma conta"
                        ImageSource="adicionar_amigo.png"
                        ContentLayout="Left, 10"
                        BorderColor="Gray"
                        BorderWidth="1.5"
                        BackgroundColor="White"
                        TextColor="Gray"
                        CornerRadius="10"
                        HeightRequest="45"/>

                </VerticalStackLayout>

            </Frame>

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>